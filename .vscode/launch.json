    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug on Localhost",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/index.js",
            "env": {
                "NODE_ENV": "default"
            }
        },
        {
            "name": "Debug on Production",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/index.js",
            "env": {
                "NODE_ENV": "production"
            }
        },
        {
            "name": "Debug on Staging",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/index.js",
            "env": {
                "NODE_ENV": "staging"
            }
        },
        {
            "name": "Debug Unit Test",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "test:unit"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "openOnFirstSessionStart",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env": {
                "NODE_ENV": "testing"
            }
        },
        {
            "name": "Debug Integrated Test",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "test:integration"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "openOnFirstSessionStart",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env": {
                "NODE_ENV": "testing"
            }
        }
    ]
}